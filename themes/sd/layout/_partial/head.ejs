<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <%
    var title = page.title;

    if (is_archive()){
        title = 'Archives';

        if (is_month()){

            title += ': ' + page.year + '/' + page.month;

        } else if (is_year()){

            title += ': ' + page.year;

        }
    } else if (is_category()){

        title = 'Category: ' + page.category;

    } else if (is_tag()){

        title = 'Tag: ' + page.tag;

    }
    %>

    <title><% if (title) { %><%= title %> | <% } %><%= config.title %></title>

    <% if (theme.favicon){ %>
        <link rel="icon" href="<%- theme.favicon %>">
    <% } %>

    <%- css('css/style') %>

    <%- partial('google-analytics') %>

    <%- js('js/lib/modernizr-2.8.3.js') %>
</head>
